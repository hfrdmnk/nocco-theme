<!DOCTYPE html>
<html lang="{{@site.locale}}" id="top">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>{{meta_title}}</title>

    <link rel="stylesheet" href="{{asset "built/index.css"}}" />
    <script src="{{asset "built/index.js"}}" defer></script>

    {{!-- Alpine.js for interactive components --}}
    <script defer src="{{asset "js/alpine.js"}}"></script>
    <style>[x-cloak] { display: none !important; }</style>

    {{ghost_head}}
</head>
<body class="{{body_class}}" x-data="{ navOpen: false }">

{{!-- Main wrapper with max-width for centering --}}
<div class="mx-auto max-w-[87.5rem] px-4 lg:px-8">
    {{!-- 5-column grid layout --}}
    <div class="site-grid">

        {{!-- Left navigation sidebar --}}
        {{> site-nav}}

        {{!-- Site header --}}
        {{> site-header}}

        {{!-- Main content area --}}
        <main class="[grid-column:content-start/content-end] min-h-[50vh]">
            {{{body}}}
        </main>

        {{!-- Site footer --}}
        {{> site-footer}}

    </div>
</div>

{{ghost_foot}}

</body>
</html>
