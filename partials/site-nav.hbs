{{!-- Desktop sidebar navigation (left outer column at lg:) --}}
<aside class="[grid-column:full-start/wide-start] [grid-row:1/-1] hidden lg:block sticky top-8 self-start pt-8 pl-8">
  <a href="{{@site.url}}" class="text-mono-600 hover:text-accent-500 transition-colors font-mono text-sm">/</a>
  <nav class="flex flex-col gap-1 font-mono text-sm mt-2">
    {{#foreach navigation}}
      <a
        href="{{url}}"
        class="text-mono-600 hover:text-accent-500 transition-colors {{#if current}}text-accent-500{{/if}}"
      >
        /{{label}}
      </a>
    {{/foreach}}
  </nav>
  <hr class="my-4 border-mono-200 w-12">
  <nav class="flex flex-col gap-1 font-mono text-sm">
    {{#foreach navigation type="secondary"}}
      <a href="{{url}}" class="text-mono-600 hover:text-accent-500 transition-colors">
        @{{label}}
      </a>
    {{/foreach}}
  </nav>
</aside>

{{!-- Mobile overlay navigation --}}
<div
  x-show="navOpen"
  x-transition:enter="transition ease-out duration-300"
  x-transition:enter-start="opacity-0"
  x-transition:enter-end="opacity-100"
  x-transition:leave="transition ease-in duration-200"
  x-transition:leave-start="opacity-100"
  x-transition:leave-end="opacity-0"
  class="fixed inset-0 z-50 lg:hidden"
  x-cloak
>
  {{!-- Backdrop --}}
  <div
    class="absolute inset-0 bg-white/90 backdrop-blur-sm"
    @click="navOpen = false"
  ></div>

  {{!-- Slide-in panel --}}
  <nav
    x-show="navOpen"
    x-transition:enter="transition ease-out duration-300"
    x-transition:enter-start="translate-x-full"
    x-transition:enter-end="translate-x-0"
    x-transition:leave="transition ease-in duration-200"
    x-transition:leave-start="translate-x-0"
    x-transition:leave-end="translate-x-full"
    class="absolute right-0 top-0 h-full w-64 bg-white p-8 shadow-lg flex flex-col gap-2 font-mono"
  >
    {{#foreach navigation}}
      <a
        href="{{url}}"
        class="text-mono-600 hover:text-accent-500 text-lg transition-colors {{#if current}}text-accent-500{{/if}}"
        @click="navOpen = false"
      >
        /{{label}}
      </a>
    {{/foreach}}
    <hr class="my-4 border-mono-200">
    {{#foreach navigation type="secondary"}}
      <a
        href="{{url}}"
        class="text-mono-600 hover:text-accent-500 transition-colors"
        @click="navOpen = false"
      >
        @{{label}}
      </a>
    {{/foreach}}
  </nav>
</div>
