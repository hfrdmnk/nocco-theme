{{!< default}}

{{#post}}

<article class="{{post_class}}">
    {{!-- Post header with title, featured image, and metadata --}}
    {{> page-header}}

    {{!-- Custom excerpt if present --}}
    {{#if custom_excerpt}}
        <p class="text-mono-600 text-lg mt-4">{{custom_excerpt}}</p>
    {{/if}}

    {{!-- Post content with prose styling --}}
    <div class="mt-8 prose prose-mono max-w-none">
        {{content}}
    </div>

    {{!-- Post footer --}}
    <footer class="mt-12 pt-8 border-t border-mono-100">
        <div class="text-mono-500 text-sm">
            Written by {{#foreach authors}}<a href="{{url}}" class="hover:text-accent-500 transition-colors">{{name}}</a>{{#unless @last}}, {{/unless}}{{/foreach}}
        </div>

        {{!-- Comments section --}}
        {{#if comments}}
        <section class="mt-8">
            {{comments}}
        </section>
        {{/if}}
    </footer>
</article>

{{!-- Next/Previous post navigation --}}
<nav class="mt-12 pt-8 border-t border-mono-100 grid grid-cols-2 gap-4">
    <div>
        {{#prev_post}}
        <a href="{{url}}" class="group flex items-center gap-2 text-mono-600 hover:text-accent-500 transition-colors">
            {{> "icons/arrow-left"}}
            <span class="font-mono text-sm">{{title}}</span>
        </a>
        {{/prev_post}}
    </div>
    <div class="text-right">
        {{#next_post}}
        <a href="{{url}}" class="group flex items-center justify-end gap-2 text-mono-600 hover:text-accent-500 transition-colors">
            <span class="font-mono text-sm">{{title}}</span>
            {{> "icons/arrow-right"}}
        </a>
        {{/next_post}}
    </div>
</nav>

{{/post}}
