{
    "name": "nocco",
    "description": "Theme for dominikhofer.me",
    "version": "1.0.0",
    "engines": {
        "ghost": ">=5.0.0"
    },
    "license": "MIT",
    "screenshots": {
        "desktop": "assets/screenshot-desktop.jpg"
    },
    "scripts": {
        "dev": "vite build --watch",
        "build": "vite build",
        "zip": "pnpm build && bestzip $npm_package_name.zip assets/* partials/* members/* lib/* *.hbs package.json",
        "test": "pnpm dlx gscan .",
        "pretest": "pnpm build"
    },
    "author": {
        "name": "Ghost Foundation",
        "email": "hello@ghost.org",
        "url": "https://ghost.org"
    },
    "gpm": {
        "type": "theme",
        "categories": [
            "Minimal",
            "Magazine"
        ]
    },
    "keywords": [
        "ghost",
        "theme",
        "ghost-theme"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/TryGhost/Starter.git"
    },
    "bugs": "https://github.com/TryGhost/Starter/issues",
    "contributors": "https://github.com/TryGhost/Starter/graphs/contributors",
    "devDependencies": {
        "@tailwindcss/vite": "^4.1.18",
        "bestzip": "^2.2.1",
        "vite": "^7.3.0",
        "vite-plugin-restart": "^2.0.0"
    },
    "browserslist": [
        "defaults"
    ],
    "config": {
        "card_assets": true,
        "posts_per_page": 15,
        "custom_fonts": false,
        "custom": {
            "development_mode": {
                "type": "boolean",
                "default": false,
                "description": "Enable to load assets from Vite dev server (localhost:5173)"
            }
        },
        "image_sizes": {
            "xxs": {
                "width": 30
            },
            "xs": {
                "width": 100
            },
            "s": {
                "width": 300
            },
            "m": {
                "width": 600
            },
            "l": {
                "width": 1200
            },
            "xl": {
                "width": 2000
            }
        }
    },
    "type": "module",
    "dependencies": {
        "@tailwindcss/typography": "^0.5.19",
        "tailwindcss": "^4.1.18"
    }
}
